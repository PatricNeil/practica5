@model IEnumerable<practica5.Models.Ventum>

@{
    ViewData["Title"] = "Index";
}

<h1>TABLA VENTAS</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Nueva Venta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClienteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleadoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdClienteNavigation.IdCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.IdEmpleado)
                </td>
                <td class="btn-group" role="group" aria-label="Basic outlined example">
                    <a asp-action="Edit" asp-route-id="@item.IdVenta" class="btn btn-outline-secondary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdVenta" class="btn btn-outline-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdVenta" class="btn btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
